<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="base_btnStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/main_button</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="google_btnStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:backgroundTint">@color/white2</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">17sp</item>
        <item name="icon">@drawable/google_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="toolbar_title">
        <item name="android:textSize">17sp</item>
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
    
    <style name="user_card_name">
        <item name="fontFamily">@font/outfit_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="user_card_satus">
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="user_settigns">
        <item name="fontFamily">@font/outfit_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>