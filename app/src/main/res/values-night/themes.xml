<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TaskManager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorAccent">@color/main_button</item>
    </style>
    
    <style name="base_text">
        
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:fontFamily">@font/outfit_regular</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="base_editText" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="boxStrokeColor">@color/main_button</item>
        <item name="boxBackgroundColor">@color/white2</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="hintTextColor">@color/main_button</item>
    </style>

    <style name="base_btnStyle" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:backgroundTint">@color/main_button</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="google_btnStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:backgroundTint">@color/white2</item>
        <item name="android:fontFamily">@font/outfit_bold</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">17sp</item>
        <item name="icon">@drawable/google_icon</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>

</resources>