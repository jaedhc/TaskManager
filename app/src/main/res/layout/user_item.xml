<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/chat_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/default_pic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_item_name"
        style="@style/user_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="User Placeholder"
        app:layout_constraintStart_toEndOf="@+id/chat_item_img"
        app:layout_constraintTop_toTopOf="@+id/chat_item_img" />

    <TextView
        android:id="@+id/chat_item_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/user_card_satus"
        android:text="Status placeholder"
        app:layout_constraintStart_toStartOf="@+id/chat_item_name"
        app:layout_constraintTop_toBottomOf="@+id/chat_item_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_light"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>